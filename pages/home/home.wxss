/* pages/home/home.wxss */
.home{
  width: 100%;
  min-height: 100vh;
  background-color: #F5F5F5;
}
.home-tabbar{
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  justify-content: space-between;
  padding: 0 32rpx;
}

.home-content{
  padding: 32rpx;
}

.scroll-item{
  position: relative;
  background-color: #FFFFFF;
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 12px;
  box-shadow: 1px 1px 6px rgba(171, 171, 171, 0.1);
}

.popup-header{
  font-size: 0.8rem;
  line-height: 60rpx;
}
.popup-item-button{
  display: flex;
  height: 70rpx;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 40rpx;
  background-color: #FFFFFF;
  font-size: 0.8rem;
  margin-right: 8rpx;
  border-radius: 4px;
}

.title{
  font-weight: bold;
  height: 36rpx;
}
.text{
  padding: 6px;
}

.font-size{
  font-size: 0.8rem;
}

.item-title{
  color: #8C8C8C;
  font-size: 0.8rem;
  line-height: 70rpx;
}

.dot{
  display: block;
  background-color: #999999;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  margin-right: 6rpx;
}

.status{
  font-size: 0.9rem;
  color: #999999;
  display: flex;
  align-items: center;
}
.text-ellipsis{
  display: block;
  white-space: nowrap; 
  text-overflow: ellipsis;
  overflow: hidden;
}